{
  "name": "healthcheck-tray",
  "version": "1.0.0",
  "description": "Tray app to ping /api/health every 10 minutes",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Scheduler Team",
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.scheduler.healthcheck",
    "productName": "Scheduler Healthcheck",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "ping.png",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "ping.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Scheduler Healthcheck",
      "runAfterFinish": true
    }
  }
}
